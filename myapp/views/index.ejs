<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head")%>
<body>
	<!-- Header -->
	<%- include("./partials/header")%>
	<!-- /Header -->
	

	<!-- Banner -->
	<div class="banner">
		<img class="imagen_banner" src="images/banner.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "últimos" products -->
			<% if (productos && productos.length > 0) { %>
				<% productos.forEach(function(producto) { %>
					<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
					<a href="/product/<%= producto.Id %>">
						<figure class="product-box_image">
							<img class="imagen_zapas" src="<%= producto.nombre_foto %>" alt="<%= producto.nombre_prod %>">
						</figure>
						<article class="product-box_data">
							<h2><%= producto.nombre_prod %></h2>
							<p><%= producto.descripcion_prod %></p>
						</article>
					</a>
					</section>
					</div>
				<% }) %>
			<% } else { %>
				<p>No products available.</p>
			<% } %>
			
	
	





	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "últimos" products -->
			<% if (productos && productos.length > 0) { %>
				<% productos.forEach(function(producto) { %>
					<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
					<a href="/product/<%= producto.Id %>">
						<figure class="product-box_image">
							<img class="imagen_zapas" src="<%= producto.nombre_foto %>" alt="<%= producto.nombre_prod %>">
						</figure>
						<article class="product-box_data">
							<h2><%= producto.nombre_prod %></h2>
							<p><%= producto.descripcion_prod %></p>
						</article>
					</a>
					</section>
					</div>
				<% }) %>
			<% } else { %>
				<p>No products available.</p>
			<% } %>
	<!-- /Más comentados -->


	<!-- footer -->
	<%- include("./partials/footer")%>
	<!-- /footer -->
</body>	
</html>