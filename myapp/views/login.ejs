<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include("./partials/head")%>

<body>
	<!-- Header -->
	<%- include("./partials/header")%>
	<!-- /Header -->

	
	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ingresar</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<div class="col-12"> 
				<form action="/perfil" method="get" class="loginForm">
					<label for="usuario" class="formLabel">Usuario: </label>
					<input type="email" id="usuario" name="usuario" class="formInput" required>
					<br>
					<label for="contrasena" class="formLabel">Contraseña: </label>
					<input type="password" id="contrasena" name="contrasena" class="formInput" required>
					<br>
					<label for="recordarme" class="formLabel">Recordarme: </label>
					<input type="checkbox" id="recordarme" name="recordarme" class="formCheckbox" required>
					<br><br>
					<input type="submit" value="Iniciar Sesión" class="formButton">
				</form>
				
			</div>
			
	<!-- footer -->
	<%- include("./partials/footer")%>
	<!-- /footer -->
</body>

</html>