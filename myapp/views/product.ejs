<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head")%>
</head>
<body>
	<!-- Header -->
	
	<% if (locals.user != undefined) { %>
		<%- include("./partials/headerLogueado") %>
	<% } else { %>
		<%- include("./partials/header") %>
	<% } %>
	<!-- /Header -->
	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"> <%= productos.nombreProd %></h2> 
			<p class="product-edit">
				<a class="product-edit" href="/cargarproductos">Editar producto</a>
			</p>
		</div>
	</div>
	
	<div class="product-detail">
		<div class="row">
			<article class="col-12 col-lg-8 product-detail-info">
				<img src="<%= productos.imagenProd %>" alt="" class="product-detail-img">
				<p class="product-detail-description"> <%= productos.descripcion %></p>
			</article>
			<div class="col-12 col-lg-4">
				<section class="comentarios">
					<% comentarios.forEach(function(comentario, index) { %>
						<article>
							<img src="" alt="">
							<div class="info">
								<p class="usuario" >
									<strong><a href="/users/perfil"><%= comentario.userId %></a></strong>
									<%= comentario.comentario %>
								</p>
							</div>
						</article>
					<% }); %>
				</section>
	
				<form class="form" action="/product" method="get">
					<input class="form-input" type="text" value="" placeholder="Agregar comentario">
					<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
				</form>
				<hr>
			</div>
		</div>
	</div>
	
	<!-- /product detail -->
	<!-- footer -->
	<%- include("./partials/footer")%>
	<!-- /footer -->

</body>	
</html>